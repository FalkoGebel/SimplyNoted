<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="BaseColors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Colors -->
    <SolidColorBrush x:Key="ToolTip.Background.Normal" Color="{DynamicResource WhiteMedium}"/>
    <SolidColorBrush x:Key="ToolTip.Border.Normal" Color="{DynamicResource WhiteDark}"/>
    <SolidColorBrush x:Key="ToolTip.Foreground.Normal" Color="{DynamicResource Black}"/>

    <!-- Button -->
    <Style x:Name="ToolTip" TargetType="ToolTip">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{StaticResource ToolTip.Foreground.Normal}" />
        <Setter Property="HasDropShadow" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border Background="{StaticResource ToolTip.Background.Normal}"
                            BorderBrush="{StaticResource ToolTip.Border.Normal}"
                            BorderThickness="1"
                            CornerRadius="5">
                        <ContentPresenter Margin="5" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>