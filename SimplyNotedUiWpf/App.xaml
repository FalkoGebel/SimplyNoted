<Application x:Class="SimplyNotedUiWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SimplyNotedUiWpf"
             StartupUri="Views/MainView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ButtonTheme.xaml" />
                <ResourceDictionary Source="Themes/ContextMenuTheme.xaml" />
                <ResourceDictionary Source="Themes/GridSplitterTheme.xaml" />
                <ResourceDictionary Source="Themes/LabelTheme.xaml" />
                <ResourceDictionary Source="Themes/ListBoxTheme.xaml" />
                <ResourceDictionary Source="Themes/TextBoxTheme.xaml" />
                <ResourceDictionary Source="Themes/ToolTipTheme.xaml" />
                <ResourceDictionary Source="Themes/WindowTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>